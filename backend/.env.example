# Database connection
# SQLite (default for development):
DATABASE_URL=sqlite:///./cocktails.db
# PostgreSQL (for production):
# DATABASE_URL=postgresql://user:password@localhost:5432/cocktails

# Anthropic API key for Claude Vision
ANTHROPIC_API_KEY=your-api-key-here

# Upload directory
UPLOAD_DIR=./uploads

# Debug mode
DEBUG=false

# CORS origins - comma-separated list of allowed frontend origins
# Add your production frontend URL here
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Authentication
# REQUIRED in production - generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# In development, a random key is auto-generated if not set
SECRET_KEY=
# Token expiration in minutes (default: 7 days = 10080 minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Production mode detection (Railway sets RAILWAY_ENVIRONMENT automatically)
# Set PRODUCTION=true to enable production mode validation manually
# PRODUCTION=true
